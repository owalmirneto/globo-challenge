source 'https://rubygems.org'
git_source(:github) { |repo| 'https://github.com/#{repo}.git' }

ruby File.read('.ruby-version').strip

group :development, :test do
  # https://github.com/pry/pry
  gem 'pry', '~> 0.14.1'
end

group :test do
  # https://github.com/rspec/rspec#install
  gem 'rspec', '~> 3.10'
end
